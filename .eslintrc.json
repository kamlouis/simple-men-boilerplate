{
  "extends": "airbnb-base",
  "plugins": ["import", "prettier"],
  "env": {
    "browser": true,
    "jasmine": true,
    "mocha": true,
    "es6": true,
    "node": true
  },
  "rules": {
    "no-multiple-empty-lines": [2, { "max": 2 }],
    "prettier/prettier": ["error", { "singleQuote": true }],
    "max-len": 0,
    "no-param-reassign": 0,
    "prefer-default-export": 0,
    "prefer-const": 1
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "sourceType": "module",
    "allowImportExportEverywhere": true,
    "ecmaVersion": 7,
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true
    }
  },
  "globals": {
    "window": true
  }
}
